<templateSet group="Gleam">
    <!-- Root level -->
    <template name="typec" value="type $NAME$ {&#10;  $END$&#10;}" toReformat="true"
              toShortenFQNames="true" key="live.template.type.description" resource-bundle="messages.GleamBundle">
        <variable name="NAME" expression="" defaultValue="MyType" alwaysStopAt="true"/>
        <context>
            <option name="GLEAM_TOP_LEVEL" value="true"/>
        </context>
    </template>
    <template name="fn0" value="fn $NAME$($PARAMS$) {&#10;  $END$&#10;}" toReformat="true"
              toShortenFQNames="true" key="live.template.fn0.description" resource-bundle="messages.GleamBundle">
        <variable name="NAME" expression="" defaultValue="" alwaysStopAt="true"/>
        <variable name="PARAMS" expression="" defaultValue="" alwaysStopAt="true"/>
        <context>
            <option name="GLEAM_TOP_LEVEL" value="true"/>
        </context>
    </template>

    <!-- Expression level -->
    <template name="fna" value="fn $NAME$($PARAMS$) {&#10;  $END$&#10;}" toReformat="true"
              toShortenFQNames="true" key="live.template.anonymousFn.description"
              resource-bundle="messages.GleamBundle">
        <variable name="NAME" expression="" defaultValue="" alwaysStopAt="true"/>
        <variable name="PARAMS" expression="" defaultValue="" alwaysStopAt="true"/>
        <variable name="RETURN_TYPE" expression="" defaultValue="" alwaysStopAt="true"/>
    </template>
    <template name="case0" value="case $EXPR$ {&#10;  $END$&#10;}" toReformat="true"
              toShortenFQNames="true" key="live.template.case.description" resource-bundle="messages.GleamBundle">
        <context>
            <option name="GLEAM_FUNCTION" value="true"/>
        </context>
        <variable name="EXPR" expression="" defaultValue="" alwaysStopAt="true"/>
    </template>
</templateSet>
